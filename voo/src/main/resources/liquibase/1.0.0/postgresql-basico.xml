<databaseChangeLog xmlns='http://www.liquibase.org/xml/ns/dbchangelog'
  xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
  xsi:schemaLocation='http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd'>
    
  <changeSet id="001" author="Bruno">
    <createTable tableName="itinerario">
    	<column name="codigo" type="long"></column>
    	<column name="origem" type="varchar(255)"></column>
    	<column name="destino" type="varchar(255)"></column>
    	<column name="removido" type="boolean"></column>
    	<column name="valor" type="double"></column>
    </createTable>
    <addPrimaryKey tableName="itinerario" columnNames="codigo"/>
    <addAutoIncrement 
    	tableName="itinerario" 
   		columnName="codigo"
   		columnDataType="long"
   		incrementBy="1" 
    	startWith="1"/>
  </changeSet>
  
  <changeSet id="002" author="Bruno">
    <createTable tableName="aeronave">
    	<column name="codigo" type="long"></column>
    	<column name="descricao" type="varchar(100)"></column>
    	<column name="removido" type="boolean"></column>
    </createTable>
    <addPrimaryKey tableName="aeronave" columnNames="codigo"/>
    <addAutoIncrement 
    	tableName="aeronave" 
   		columnName="codigo"
   		columnDataType="long"
   		incrementBy="1" 
    	startWith="1"/>
  </changeSet>
 
  <changeSet id="003" author="Bruno">
    <createTable tableName="pessoa">
    	<column name="codigo" type="long"></column>
    	<column name="nome" type="varchar(500)"></column>
    	<column name="cpf" type="varchar(15)"></column>
    	<column name="cnpj" type="varchar(20)"></column>
    	<column name="endereco" type="varchar(200)"></column>
    	<column name="data_nascimento" type="date"></column>
    	<column name="estado_civil" type="varchar(10)"></column>
    	<column name="removido" type="boolean"></column>
    </createTable>
    <addPrimaryKey tableName="pessoa" columnNames="codigo"/>
    <addAutoIncrement 
    	tableName="pessoa" 
   		columnName="codigo"
   		columnDataType="long"
  		incrementBy="1" 
    	startWith="1"/>
  </changeSet>
  
</databaseChangeLog>